@model IEnumerable<HotelManagementBoostrap4.ViewModel.BookingDetailModel>

<table class="table table-hover text-center">
    <thead class="thead-dark text-white">
        <tr>
            <th>Tên Khách Hàng</th>
            <th>Địa Chỉ</th>
            <th>Số Điện Thoại</th>
            <th>Ngày Đặt Phòng</th>
            <th>Ngày Trả Phòng</th>
            <th>Số Phòng </th>
            <th>Số Lượng Khách </th>
            <th>Số Ngày </th>
            <th>Giá Phòng </th>
            <th>Tổng Tiền </th>
        </tr>
    </thead>

    <tbody >
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.CustomerName</td>
            <td>@item.CustomerAddress  </td>
            <td>@item.CustomerPhone</td>
            <td>@item.BookingFrom.ToString("dd-MM-yyyy") </td>
            <td>@item.BookingTo.ToString("dd-MM-yyyy")</td>
            <td>@item.RoomNumber </td>
            <td>@item.NumberOfMembers </td>
            <td>@item.NumberOfDays </td>
            <td>@item.RoomPrice VND</td>
            <td>@item.TotalAmount.ToString("#,##0.00") VND
            <a href="" class="btn btn-warning mt-1">Thanh Toán</a>
            </td>

        </tr>
        }

    </tbody>
</table>

