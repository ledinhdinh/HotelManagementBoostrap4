<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" shrink-to-fit=no />
    <title>@ViewBag.Title</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <!--Link font-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Volkhov&display=swap" rel="stylesheet">

    <!--Link icon-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <!--Link css-->
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />


    <!--Link reboot-->
    <link href="~/Content/css/bootstrap-reboot.css" rel="stylesheet" />


</head>
<body>

    <nav class="navbar">
        <div class="container">
            <div class="img-responsive" style="position:absolute;z-index:-1;left:0">
                <a href="./Home/Index/">
                    <img src="~/Content/img/Ellipse 8.png" />
                </a>
            </div>

            <div class="navbar-left">
                <a href="#"><img src="~/Content/img/Logo.png" alt="logo" /></a>
            </div>

            <div class="navbar-right">
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Phòng", "Index", "Room", new { area = "" }, new { @class = "navbar-brand" })
                @*@Html.ActionLink("Đặt Phòng", "Index", "Booking", new { area = "" }, new { @class = "navbar-brand" })*@
                @Html.ActionLink("Dịch Vụ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Đăng Nhập", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Đăng Ký", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Đăng Ký", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Chi Tiết", "DetaiRoom", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>


            <div class="img-responsive" style="position:absolute;top:0;right:0;z-index:-1">
                <img src="~/Content/img/Decore.png" />
            </div>
        </div>
    </nav>
    <!--Body-->
    <div class="container body-content">
            @RenderBody()
    </div>

    <!--Footer-->
    <div style="margin-top:100px">
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-4">
                        <span class="display-2" style="font-size:44px;color: #181E4B">Jadoo.</span>
                        <p class="display-2">
                            Book your trip in minute, get full
                            Control for much longer.
                        </p>
                    </div>
                    <div class="col-4 d-flex justify-content-between">
                        <div>
                            <span class="font-weight-bold mb-4" style="color:black;font-size:21px">Company</span>
                            <div class="list-group">
                                <a href="#" class="list-group-item list-group-item-action">About</a>
                                <a href="#" class="list-group-item list-group-item-action">Careers</a>
                                <a href="#" class="list-group-item list-group-item-action">Mobile</a>
                            </div>
                        </div>
                        <div>

                            <span class="font-weight-bold  mb-4" style="color:black;font-size:21px">Contact</span>
                            <div class="list-group">
                                <a href="#" class="list-group-item list-group-item-action">Help/FAQ</a>
                                <a href="#" class="list-group-item list-group-item-action">Press</a>
                                <a href="#" class="list-group-item list-group-item-action">Affilates</a>
                            </div>
                        </div>
                        <div>
                            <span class="font-weight-bold  mb-4" style="color:black;font-size:21px">More</span>
                            <div class="list-group">
                                <a href="#" class="list-group-item list-group-item-action">Airlinefees</a>
                                <a href="#" class="list-group-item list-group-item-action">Airline</a>
                                <a href="#" class="list-group-item list-group-item-action">Low fare tips</a>
                            </div>

                        </div>
                    </div>
                    <div class="col-4 d-flex flex-column justify-content-between text-center">
                        <div class="social">
                            <img src="~/Content/img/Social.png" />
                            <img src="~/Content/img/Social (1).png" />
                            <img src="~/Content/img/Social (2).png" />
                        </div>
                        <div>
                            <span class="display-2" style="font-size:20px">Discover our app</span>
                        </div>
                        <div>
                            <img src="~/Content/img/Google Play.png" />
                            <img src="~/Content/img/Play Store.png" />
                        </div>
                    </div>

                </div>
            </div>

            <p class="text-center">&copy; @DateTime.Now.Year - All rights reserved@jadoo.co</p>
        </footer>
    </div>
  
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
</body>
</html>
